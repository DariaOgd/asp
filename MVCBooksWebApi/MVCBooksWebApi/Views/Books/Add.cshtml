@model MVCBooksWebApi.Models.AddBookViewModel

@{
    ViewData["Title"] = "Dodaj Książkę";
}

<h1>Dodaj Książkę</h1>

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post" action="Add">
    <div class="mb-3">
        <label for="Title" class="form-label">Tytuł</label>
        <input type="text" id="Title" name="Title" class="form-control" asp-for="Title" required>
    </div>
    <div class="mb-3">
        <label for="Author" class="form-label">Autor</label>
        <input type="text" id="Author" name="Author" class="form-control" asp-for="Author" required>
    </div>
    <div class="mb-3">
        <label for="ISBN" class="form-label">ISBN</label>
        <input type="text" id="ISBN" name="ISBN" class="form-control" asp-for="ISBN" required>
    </div>
    <div class="mb-3">
        <label for="Pages" class="form-label">Ilość stron</label>
        <input type="number" id="Pages" name="Pages" class="form-control" asp-for="Pages" required>
    </div>
    <div class="mb-3">
        <label for="Category" class="form-label">Kategoria</label>
        <input type="text" id="Category" name="Category" class="form-control" asp-for="Category" autocomplete="off" required>
    </div>
    <div class="mb-3">
        <label for="Amount" class="form-label">Ilość</label>
        <input type="number" id="Amount" name="Amount" class="form-control" asp-for="Amount" required>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
</form>
