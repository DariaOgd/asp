@model MVCBooksWebApi.Models.Domain.User

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2>Logowanie</h2>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Username, "Nazwa")
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Hasło")
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
        </div>

        <br />

        <button type="submit" class="btn btn-primary">Zaloguj się</button>
    }

    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <p class="mt-3" style="color: red;">@ViewData["ErrorMessage"]</p>
    }
</div>
