@{
}
@model List<MVCBooksWebApi.Models.Domain.User>

<h1>Użytkownicy</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa użytkownika</th>
            <th>Hasło</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>••••••••</td>
                <td><a href="Users/View/@user.Id">Więcej</a></td>
            </tr>
        }
    </tbody>
</table>
